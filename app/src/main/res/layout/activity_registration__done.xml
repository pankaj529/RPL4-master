<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.radiant.rpl.testa.Registration_Done">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="You have Successfully Registered With Us.Thank you for Registering with Us."
        android:layout_gravity="center"
        android:layout_weight="1.2"
        android:textSize="24sp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:gravity="bottom|center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/clickhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:gravity="top|top"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" to proceed for taking test"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:gravity="top"
            />
    </LinearLayout>
</LinearLayout>